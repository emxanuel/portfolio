---
import { useTranslations } from "../i18n/utils";
import { getLangFromUrl } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const translations = useTranslations(lang);
const indexes = [
    'first',
    'second',
    'third',
]
---

<section class="mb-4">
    <h2 class="font-bold mb-4 text-2xl md:text-3xl">{translations('home.experience.title')}</h2>
    <div class="flex flex-col gap-2 border-l-2 border-[#696969]">
        {indexes.map((text) => (
            <div class="flex gap-4 mb-8 snap-center">
                <div class="h-3 aspect-square -ml-[7px] mt-1 bg-blue-400 rounded-full"></div>
                <div class="flex gap-4 flex-col">
                    <header class="flex flex-col gap-1">
                        <div class="flex gap-1 flex-col md:flex-row md:gap-2">
                            <h3 class="font-semibold">{translations(`home.experience.${text}` as any)}</h3>
                            <span class="hidden md:block">-</span>
                            <span class="font-semibold text-blue-300">{translations(`home.experience.${text}.company` as any)}</span>
                        </div>
                        <span class="italic">{translations(`home.experience.${text}.date` as any)}</span>
                    </header>
                    <p class="text-balance text-gray-200">{translations(`home.experience.${text}.description` as any)}</p>
                </div>
            </div>
        ))}
    </div>
</section>