---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="contact" class="mt-20 scroll-mt-24">
  <div class="rounded-2xl border border-white/10 bg-white/5 p-6 md:p-8">
    <h2 class="text-xl font-semibold tracking-tight md:text-2xl">{t("contact.title")}</h2>
    <p class="mt-2 max-w-2xl text-sm text-zinc-300 md:text-base">{t("contact.subtitle")}</p>

    <div class="mt-6 grid gap-3 md:grid-cols-2">
      <a
        class="group flex items-center justify-between rounded-xl border border-white/10 bg-zinc-950/40 px-4 py-3 transition hover:border-white/20 hover:bg-zinc-950/60"
        href="mailto:ealg0528@gmail.com"
      >
        <span class="text-sm text-zinc-300">{t("contact.email")}</span>
        <span class="font-mono text-sm text-white group-hover:text-sky-300">ealg0528@gmail.com</span>
      </a>

      <a
        class="group flex items-center justify-between rounded-xl border border-white/10 bg-zinc-950/40 px-4 py-3 transition hover:border-white/20 hover:bg-zinc-950/60"
        href="tel:+18098648668"
      >
        <span class="text-sm text-zinc-300">{t("contact.phone")}</span>
        <span class="font-mono text-sm text-white group-hover:text-sky-300">+1 809-864-8668</span>
      </a>

      <a
        class="group flex items-center justify-between rounded-xl border border-white/10 bg-zinc-950/40 px-4 py-3 transition hover:border-white/20 hover:bg-zinc-950/60"
        href="https://www.linkedin.com/in/emmanuellopez-dev"
        target="_blank"
        rel="noreferrer"
      >
        <span class="text-sm text-zinc-300">LinkedIn</span>
        <span class="font-mono text-sm text-white group-hover:text-sky-300">/emmanuellopez-dev</span>
      </a>

      <a
        class="group flex items-center justify-between rounded-xl border border-white/10 bg-zinc-950/40 px-4 py-3 transition hover:border-white/20 hover:bg-zinc-950/60"
        href="https://github.com/emxanuel"
        target="_blank"
        rel="noreferrer"
      >
        <span class="text-sm text-zinc-300">GitHub</span>
        <span class="font-mono text-sm text-white group-hover:text-sky-300">@emxanuel</span>
      </a>
    </div>
  </div>
</section>

