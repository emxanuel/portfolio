---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const translations = useTranslations(lang);
---

<main class="w-full h-full flex items-center justify-center flex-col md:flex-row px-5 gap-10 md:gap-0">
    <section class="md:flex-1 flex  flex-col items-center ">
        <h1 class="text-xl md:text-3xl font-bold">{translations('home.main.title')}</h1>
        <p class="text-lg md:text-xl text-center">{translations('home.main.subtitle')}</p>
    </section>
    <section class="md:flex-1 flex items-center justify-center">
        <img src="https://placehold.co/200x200?text=my+pic" class="rounded-full w-[50%] max-w-[200px]" alt="">
    </section>
</main>