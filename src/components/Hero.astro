---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="grid gap-10 md:grid-cols-12 md:items-start">
  <div class="md:col-span-7">
    <div class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-zinc-200">
      <span class="inline-flex h-1.5 w-1.5 rounded-full bg-sky-400"></span>
      <span>{t("hero.badge")}</span>
    </div>

    <h1 class="mt-5 text-3xl font-semibold leading-tight tracking-tight md:text-5xl">
      {t("hero.name")}
    </h1>

    <p class="mt-2 text-lg text-zinc-200 md:text-xl">
      {t("hero.role")}
    </p>

    <p class="mt-5 max-w-2xl text-pretty text-sm leading-relaxed text-zinc-300 md:text-base">
      {t("hero.summary")}
    </p>

    <div class="mt-7 flex flex-wrap items-center gap-3">
      <a
        href="#projects"
        class="rounded-xl bg-white px-4 py-2 text-sm font-semibold text-zinc-950 transition hover:bg-zinc-200"
        >{t("hero.cta.projects")}</a
      >
      <a
        href="#contact"
        class="rounded-xl border border-white/15 bg-white/5 px-4 py-2 text-sm font-semibold text-white transition hover:border-white/25 hover:bg-white/10"
        >{t("hero.cta.contact")}</a
      >

      <div class="mx-1 h-6 w-px bg-white/10"></div>

      <a
        class="text-sm text-zinc-300 hover:text-white"
        href="https://www.linkedin.com/in/emmanuellopez-dev"
        target="_blank"
        rel="noreferrer"
        >LinkedIn</a
      >
      <a
        class="text-sm text-zinc-300 hover:text-white"
        href="https://github.com/emxanuel"
        target="_blank"
        rel="noreferrer"
        >GitHub</a
      >
    </div>

    <div class="mt-8 flex flex-wrap gap-x-4 gap-y-2 text-sm text-zinc-400">
      <span class="inline-flex items-center gap-2">
        <span class="inline-flex h-1.5 w-1.5 rounded-full bg-white/20"></span>
        {t("hero.meta.location")}
      </span>
      <span class="inline-flex items-center gap-2">
        <span class="inline-flex h-1.5 w-1.5 rounded-full bg-white/20"></span>
        {t("hero.meta.stack")}
      </span>
    </div>
  </div>

  <aside class="md:col-span-5">
    <div class="rounded-2xl border border-white/10 bg-white/5 p-6 md:p-7">
      <h2 class="text-sm font-semibold text-white">{t("hero.highlights.title")}</h2>
      <ul class="mt-4 space-y-3 text-sm text-zinc-300">
        {t("hero.highlights.items")
          .split("\n")
          .filter(Boolean)
          .map((item) => (
            <li class="flex gap-3">
              <span class="mt-1.5 inline-flex h-1.5 w-1.5 flex-none rounded-full bg-sky-400"></span>
              <span class="text-pretty leading-relaxed">{item}</span>
            </li>
          ))}
      </ul>
    </div>
  </aside>
</section>
