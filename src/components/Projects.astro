---
import { getLangFromUrl, useProjectsTranslations } from "../i18n/utils";
import TechIcon from "./TechIcon";
import { icons } from "../utils/icons";

const lang = getLangFromUrl(Astro.url);
const t = useProjectsTranslations(lang);

function normalizeTechKey(label: string) {
  return label.toLowerCase().replace(/[^a-z0-9]/g, "");
}

function techItems(key: string) {
  return t(key as any).split(", ").filter(Boolean);
}

const otherProjects = ["colegio", "soundwave", "emmscomputers"] as const;
---

<section id="projects" class="mt-20 scroll-mt-24">
  <div class="flex items-end justify-between gap-6">
    <div>
      <h2 class="text-2xl font-semibold tracking-tight md:text-3xl">{t("projects.title")}</h2>
      <p class="mt-2 max-w-2xl text-sm text-zinc-300 md:text-base">{t("projects.subtitle")}</p>
    </div>
  </div>

  <div class="mt-8 space-y-6">
    <!-- AI Wisdom (backend-only / API) -->
    <article class="rounded-2xl border border-white/10 bg-white/5 p-6 md:p-8">
      <header class="flex flex-col gap-4 md:flex-row md:items-start md:justify-between">
        <div class="min-w-0">
          <div class="flex flex-wrap items-center gap-2">
            <p class="inline-flex w-fit items-center rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-zinc-200">
              {t("projects.aiwisdom.role" as any)}
            </p>
            <p class="inline-flex w-fit items-center rounded-full border border-emerald-400/20 bg-emerald-400/10 px-3 py-1 text-xs text-emerald-200">
              ~80% LLM cost ↓
            </p>
          </div>
          <h3 class="mt-3 text-xl font-semibold tracking-tight text-white md:text-2xl">{t("projects.aiwisdom.title" as any)}</h3>
          <p class="mt-3 max-w-2xl text-pretty text-sm leading-relaxed text-zinc-300 md:text-base">
            {t("projects.aiwisdom.description" as any)}
          </p>
        </div>

        <div class="flex flex-wrap items-center gap-3">
          <a
            href={t("projects.aiwisdom.docsUrl" as any)}
            target="_blank"
            rel="noreferrer"
            class="inline-flex w-fit items-center gap-2 rounded-xl border border-white/15 bg-white/5 px-4 py-2 text-sm font-semibold text-white transition hover:border-white/25 hover:bg-white/10"
          >
            <span>Swagger</span>
            <span class="text-zinc-300">↗</span>
          </a>
        </div>
      </header>

      <div class="mt-6 grid gap-6 md:grid-cols-12">
        <div class="md:col-span-5">
          <p class="text-xs font-medium uppercase tracking-wide text-zinc-400">Highlights</p>
          <ul class="mt-3 space-y-2 text-sm leading-relaxed text-zinc-200">
            {t("projects.aiwisdom.highlights" as any)
              .split("\n")
              .filter(Boolean)
              .map((item) => (
                <li class="flex gap-3">
                  <span class="mt-2 inline-flex h-1.5 w-1.5 flex-none rounded-full bg-white/25"></span>
                  <span class="text-pretty">{item}</span>
                </li>
              ))}
          </ul>

          <div class="mt-6 border-t border-white/10 pt-4">
            <p class="text-xs font-medium uppercase tracking-wide text-zinc-400">Stack</p>
            <div class="mt-3 flex flex-wrap items-center gap-3">
              {techItems("projects.aiwisdom.tech").map((label) => {
                const key = normalizeTechKey(label);
                const meta = icons[key as keyof typeof icons];
                if (!meta?.icon || !meta?.url) {
                  return (
                    <span class="rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-zinc-200">
                      {label}
                    </span>
                  );
                }
                return <TechIcon tech={meta.icon} url={meta.url} />;
              })}
            </div>
          </div>
        </div>

        <div class="md:col-span-7">
          <div class="rounded-2xl border border-white/10 bg-zinc-950/40 p-5 md:p-6">
            <p class="text-xs font-medium uppercase tracking-wide text-zinc-400">RAG flow</p>
            <pre class="mt-4 whitespace-pre-wrap break-words font-mono text-xs leading-relaxed text-zinc-200">
{`Docs/KB → chunking → embeddings
         ↓
   pgvector search (top-k)
         ↓
context assembly + prompt
         ↓
   LLM (Ollama) response`}
            </pre>
          </div>

          <div class="mt-4 rounded-2xl border border-white/10 bg-zinc-950/40 p-5 md:p-6">
            <p class="text-xs font-medium uppercase tracking-wide text-zinc-400">Access</p>
            <p class="mt-3 text-sm text-zinc-300">
              This API is multi-tenant and requires an <span class="text-white">API key</span> +{" "}
              <span class="text-white">tenant identifier</span> on every request (no public “try it”).
            </p>
          </div>
        </div>
      </div>
    </article>

    <!-- Skillon (landscape/web-style screenshots) -->
    <article class="rounded-2xl border border-white/10 bg-white/5 p-6 md:p-8">
      <header class="flex flex-col gap-4 md:flex-row md:items-start md:justify-between">
        <div class="min-w-0">
          <div class="flex flex-wrap items-center gap-2">
            <p class="inline-flex w-fit items-center rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-zinc-200">
              {t("projects.skillon.role" as any)}
            </p>
            <p class="inline-flex w-fit items-center rounded-full border border-sky-400/20 bg-sky-400/10 px-3 py-1 text-xs text-sky-200">
              ~3GB → 600MB
            </p>
            <p class="inline-flex w-fit items-center rounded-full border border-sky-400/20 bg-sky-400/10 px-3 py-1 text-xs text-sky-200">
              5× concurrency
            </p>
          </div>
          <h3 class="mt-3 text-xl font-semibold tracking-tight text-white md:text-2xl">{t("projects.skillon.title" as any)}</h3>
          <p class="mt-3 max-w-2xl text-pretty text-sm leading-relaxed text-zinc-300 md:text-base">
            {t("projects.skillon.description" as any)}
          </p>
        </div>

        <a
          href={t("projects.skillon.url" as any)}
          target="_blank"
          rel="noreferrer"
          class="inline-flex w-fit items-center gap-2 rounded-xl border border-white/15 bg-white/5 px-4 py-2 text-sm font-semibold text-white transition hover:border-white/25 hover:bg-white/10"
        >
          <span>Open</span>
          <span class="text-zinc-300">↗</span>
        </a>
      </header>

      <div class="mt-6 grid gap-6 md:grid-cols-12">
        <div class="md:col-span-5">
          <p class="text-xs font-medium uppercase tracking-wide text-zinc-400">Highlights</p>
          <ul class="mt-3 space-y-2 text-sm leading-relaxed text-zinc-200">
            {t("projects.skillon.highlights" as any)
              .split("\n")
              .filter(Boolean)
              .map((item) => (
                <li class="flex gap-3">
                  <span class="mt-2 inline-flex h-1.5 w-1.5 flex-none rounded-full bg-white/25"></span>
                  <span class="text-pretty">{item}</span>
                </li>
              ))}
          </ul>

          <div class="mt-6 border-t border-white/10 pt-4">
            <p class="text-xs font-medium uppercase tracking-wide text-zinc-400">Stack</p>
            <div class="mt-3 flex flex-wrap items-center gap-3">
              {techItems("projects.skillon.tech").map((label) => {
                const key = normalizeTechKey(label);
                const meta = icons[key as keyof typeof icons];
                if (!meta?.icon || !meta?.url) {
                  return (
                    <span class="rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-zinc-200">
                      {label}
                    </span>
                  );
                }
                return <TechIcon tech={meta.icon} url={meta.url} />;
              })}
            </div>
          </div>
        </div>

        <div class="md:col-span-7">
          <div class="grid gap-4">
            {t("projects.skillon.images" as any)
              .split(", ")
              .filter(Boolean)
              .slice(0, 2)
              .map((src) => (
                <div class="overflow-hidden rounded-2xl border border-white/10 bg-zinc-950/40">
                  <div class="aspect-[16/9] w-full p-3 md:p-4">
                    <img class="h-full w-full object-contain" src={src} alt={t("projects.skillon.title" as any)} loading="lazy" />
                  </div>
                </div>
              ))}
          </div>
        </div>
      </div>
    </article>

    <!-- PrivadoPay (mobile-first screenshots) -->
    <article class="rounded-2xl border border-white/10 bg-white/5 p-6 md:p-8">
      <header class="flex flex-col gap-4 md:flex-row md:items-start md:justify-between">
        <div class="min-w-0">
          <p class="inline-flex w-fit items-center rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-zinc-200">
            {t("projects.privadopay.role" as any)}
          </p>
          <h3 class="mt-3 text-xl font-semibold tracking-tight text-white md:text-2xl">{t("projects.privadopay.title" as any)}</h3>
          <p class="mt-3 max-w-2xl text-pretty text-sm leading-relaxed text-zinc-300 md:text-base">
            {t("projects.privadopay.description" as any)}
          </p>
        </div>

        <a
          href={t("projects.privadopay.url" as any)}
          target="_blank"
          rel="noreferrer"
          class="inline-flex w-fit items-center gap-2 rounded-xl border border-white/15 bg-white/5 px-4 py-2 text-sm font-semibold text-white transition hover:border-white/25 hover:bg-white/10"
        >
          <span>Open</span>
          <span class="text-zinc-300">↗</span>
        </a>
      </header>

      <div class="mt-6 grid gap-6 md:grid-cols-12">
        <div class="md:col-span-5">
          <p class="text-xs font-medium uppercase tracking-wide text-zinc-400">Highlights</p>
          <ul class="mt-3 space-y-2 text-sm leading-relaxed text-zinc-200">
            {t("projects.privadopay.highlights" as any)
              .split("\n")
              .filter(Boolean)
              .map((item) => (
                <li class="flex gap-3">
                  <span class="mt-2 inline-flex h-1.5 w-1.5 flex-none rounded-full bg-white/25"></span>
                  <span class="text-pretty">{item}</span>
                </li>
              ))}
          </ul>

          <div class="mt-6 border-t border-white/10 pt-4">
            <p class="text-xs font-medium uppercase tracking-wide text-zinc-400">Stack</p>
            <div class="mt-3 flex flex-wrap items-center gap-3">
              {techItems("projects.privadopay.tech").map((label) => {
                const key = normalizeTechKey(label);
                const meta = icons[key as keyof typeof icons];
                if (!meta?.icon || !meta?.url) {
                  return (
                    <span class="rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-zinc-200">
                      {label}
                    </span>
                  );
                }
                return <TechIcon tech={meta.icon} url={meta.url} />;
              })}
            </div>
          </div>
        </div>

        <div class="md:col-span-7">
          <div class="flex gap-4 overflow-x-auto pb-1 [-webkit-overflow-scrolling:touch] md:grid md:grid-cols-2 md:overflow-visible md:pb-0">
            {t("projects.privadopay.images" as any)
              .split(", ")
              .filter(Boolean)
              .slice(0, 2)
              .map((src) => (
                <div class="min-w-[16rem] overflow-hidden rounded-2xl border border-white/10 bg-zinc-950/40 md:min-w-0">
                  <div class="aspect-[9/19.5] w-full p-3 md:p-4">
                    <img class="h-full w-full object-contain" src={src} alt={t("projects.privadopay.title" as any)} loading="lazy" />
                  </div>
                </div>
              ))}
          </div>
          <p class="mt-3 text-xs text-zinc-400 md:hidden">Swipe to see more</p>
        </div>
      </div>
    </article>

    <!-- Other projects (simple) -->
    <div class="rounded-2xl border border-white/10 bg-white/5 p-6 md:p-8">
      <h3 class="text-lg font-semibold text-white md:text-xl">Other projects</h3>
      <div class="mt-4 grid gap-3 md:grid-cols-2">
        {otherProjects.map((p) => (
          <a
            href={t(`projects.${p}.url` as any)}
            target="_blank"
            rel="noreferrer"
            class="group rounded-xl border border-white/10 bg-zinc-950/40 p-4 transition hover:border-white/20 hover:bg-zinc-950/60"
          >
            <div class="flex items-start justify-between gap-4">
              <p class="font-medium text-white">{t(`projects.${p}.title` as any)}</p>
              <span class="text-sm text-zinc-400 transition group-hover:text-sky-300">↗</span>
            </div>
            <p class="mt-2 text-sm text-zinc-300">{t(`projects.${p}.description` as any)}</p>
          </a>
        ))}
      </div>
    </div>
  </div>

  <p class="mt-6 text-sm text-zinc-400">{t("projects.note")}</p>
</section>