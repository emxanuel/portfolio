---
import { getLangFromUrl, useProjectsTranslations } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const translations = useProjectsTranslations(lang);
const projects = [
    'colegio',
    'soundwave',
    'emmscomputers'
]
---

<section>
    <h2 class="text-2xl font-bold">{translations('projects.title')}</h2>
    <div class="flex flex-col gap-8">
        {projects.map(project => (
            <a href={translations(`projects.${project}.url` as any)} target="_blank">
                <div class="flex flex-col gap-4">
                    <h3 class="text-xl">{translations(`projects.${project}.title` as any)}</h3>
                    <img class="rounded-lg" src={translations(`projects.${project}.image` as any)} alt={translations(`projects.${project}.imageAlt` as any)} />
                </div>
            </a>
        ))}
    </div>
</section>